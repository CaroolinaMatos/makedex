@model IEnumerable<makedex.Models.Maquiagem>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Versão com cor rosa/nude usando APENAS Bootstrap (scoped). -->
<style>
    /* Scoped theme: altera variáveis do Bootstrap localmente dentro do container .theme-nude */
    .theme-nude {
        --bs-body-bg: #fff9f9;
        /* fundo levemente rosado */
        --bs-body-color: #2b2b2b;
        --bs-primary: #d36486;
        /* rosa principal para botões */
        --bs-link-color: #b33a63;
        --bs-secondary: #f6e1e6;
        /* tom nude claro para cartões */
        --bs-card-bg: #ffffff;
        --bs-border-color: rgba(179, 58, 99, 0.08);
    }

    /* Pequenos ajustes visuais (mantendo Bootstrap como base) */
    .theme-nude .card {
        border: 1px solid var(--bs-border-color);
        border-radius: 12px;
        overflow: hidden;
    }

    .theme-nude .card-img-top {
        height: 180px;
        object-fit: cover;
    }

    .theme-nude .badge-type {
        background: var(--bs-secondary);
        color: var(--bs-link-color);
    }

    .theme-nude .price {
        color: var(--bs-link-color);
        font-weight: 700;
    }
</style>

<div class="theme-nude">
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h4 mb-0">Nossos Produtos</h2>
        </div>

        <div class="row gy-4">
            @if (!Model?.Any() ?? true)
            {
                <div class="col-12">
                    <div class="alert alert-info">Nenhuma maquiagem encontrada.</div>
                </div>
            }
            else
            {
                foreach (var item in Model)
                {
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="card h-100 shadow-sm bg-white">

                            <a asp-action="Details" asp-route-numero="@item.Numero" title="@item.Nome"
                                style="text-decoration:none; color:inherit;">
                                <img src="~/img/@(String.IsNullOrEmpty(item.Imagem) ? "placeholder.png" : item.Imagem)"
                                    class="card-img-top img-fluid" alt="@item.Nome" />
                            </a>

                            <div class="card-body d-flex flex-column ">
                                <div class="d-flex justify-content-between mb-2">
                                    <h5 class="card-title mb-0" style="font-size:1rem;">@item.Nome</h5>
                                    <span class="badge badge-type px-2 py-1">@item.Tipo?.Nome</span>
                                </div>

                                <p class="card-text text-muted text-truncate" title="@item.Descricao">
                                    @(!String.IsNullOrEmpty(item.Descricao) ? item.Descricao : "")
                                </p>

                                <div class="mt-auto d-flex justify-content-between align-items-center pt-2">
                                    <div class="price">@String.Format("{0:C}", item.valor)</div>
                                    <a class="btn btn-sm btn-danger" asp-action="Details"
                                        asp-route-numero="@item.Numero">Ver</a>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
