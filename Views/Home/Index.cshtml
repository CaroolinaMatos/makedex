@model IEnumerable<makedex.Models.Maquiagem>

@{
    ViewData["Title"] = "Home Page";
}

<h2 class="mb-4">Nossos Produtos</h2>

<div class="row">
    @if (!Model?.Any() ?? true)
    {
        <div class="col-12">
            <div class="alert alert-info">Nenhuma maquiagem encontrada.</div>
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <a asp-action="Details" asp-route-numero="@item.Numero" title="@item.Nome">
                        <img src="~/images/@(String.IsNullOrEmpty(item.Imagem) ? "placeholder.png" : item.Imagem)"
                            class="card-img-top" alt="@item.Nome" style="object-fit:cover; height:180px;" />
                    </a>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2">@item.Nome</h5>
                        <p class="card-text text-truncate" title="@item.Descricao">
                            @(!String.IsNullOrEmpty(item.Descricao) ? item.Descricao : "")
                        </p>
                        <div class="mt-auto">
                            <small class="text-muted">@item.Tipo?.Nome</small>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            <strong>@String.Format("{0:C}", item.valor)</strong>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Details"
                                asp-route-numero="@item.Numero">Ver</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
