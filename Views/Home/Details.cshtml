@model makedex.Models.Maquiagem

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h2>@Model.Nome</h2>

<div class="row">
    <div class="col-md-5">
        <img src="~/images/@(String.IsNullOrEmpty(Model.Imagem) ? "placeholder.png" : Model.Imagem)"
            class="img-fluid rounded" alt="@Model.Nome" />
    </div>
    <div class="col-md-7">
        <dl class="row">
            <dt class="col-sm-4">Número</dt>
            <dd class="col-sm-8">@Model.Numero</dd>

            <dt class="col-sm-4">Tipo</dt>
            <dd class="col-sm-8">@Model.Tipo?.Nome</dd>

            <dt class="col-sm-4">Valor</dt>
            <dd class="col-sm-8">@String.Format("{0:C}", Model.valor)</dd>

            <dt class="col-sm-4">Descrição</dt>
            <dd class="col-sm-8">@(!String.IsNullOrEmpty(Model.Descricao) ? Model.Descricao : "-")</dd>
        </dl>
    </div>
</div>
